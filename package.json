{
  "name": "hectv-scrapers",
  "version": "1.0.0",
  "description": "Scrape websites to populate the events database",
  "license": "MIT",
  "author": "@ytadvisors",
  "scripts": {
    "lint": "eslint **/*.js",
    "test": "NODE_ENV=test jest",
    "test-debug": "NODE_ENV=test node --inspect-brk node_modules/.bin/jest --runInBand",
    "test-rft-scraper": "serverless invoke local --function hectvSiteScraper --path __mocks__/serverless/startRFTScrape.json",
    "test-do314-scraper": "serverless invoke local --function hectvSiteScraper --path __mocks__/serverless/startDO314Scrape.json",
    "deploy": "yarn install && sls deploy"
  },
  "jest": {
    "automock": false,
    "testRegex": "\\.test\\.js$",
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/jest/styleMock.js",
      "\\.(gif|ttf|eot|svg|png)$": "<rootDir>/__mocks__/jest/fileMock.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ytadvisors/hectv-scrapers.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "NODE_ENV=production lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,css}": [
      "pretty-quick --staged",
      "eslint --fix ",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "7.5.5",
    "babel-core": "6.26.3",
    "babel-eslint": "10.0.2",
    "babel-loader": "8.0.6",
    "babel-plugin-source-map-support": "2.1.1",
    "eslint": "6.2.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.18.2",
    "fetch-mock": "7.3.9",
    "husky": "^1.1.2",
    "jest": "24.9.0",
    "lint-staged": "^7.3.0",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "serverless-offline": "5.10.1",
    "serverless-plugin-simulate": "0.0.17",
    "serverless-webpack": "5.3.1",
    "webpack-node-externals": "1.7.2"
  },
  "dependencies": {
    "ajv": "6.10.2",
    "cheerio": "1.0.0-rc.3",
    "chrono-node": "1.3.11",
    "dayjs": "1.8.15",
    "moment": "2.24.0",
    "mysql": "2.17.1",
    "mysql2": "1.6.5",
    "node-fetch": "2.6.0",
    "pg-hstore": "2.3.3",
    "random-useragent": "0.3.1",
    "sequelize": "5.15.1",
    "user-agents": "1.0.403",
    "webpack": "4.41.0"
  }
}
